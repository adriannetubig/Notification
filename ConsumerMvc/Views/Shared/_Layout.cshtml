@using ConsumerMvc.Helper
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    @Styles.Render("~/Content/Css")
</head>
<body ng-app="App">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fix">
        <a class="navbar-brand" href="#">Navbar</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="~/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/Home/Unauthenticated">Unauthenticated</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/Home/Login">Login</a>
                </li>
            </ul>
        </div>
    </nav>
    <script>
        var HubReconnectionAttempts = @Config.HubReconnectionAttempts;
        var HubReconnectionAttemptDelaySeconds = @Config.HubReconnectionAttemptDelaySeconds;
        var URLAuthentication = '@Config.URLAuthentication';
        var URLSignalR = '@Config.URLSignalR';
    </script>
    @Scripts.Render("~/Bundles/Scripts")
    @Scripts.Render("~/Bundles/AngularJS")
    <div class="container">
        @RenderBody()
    </div>
</body>
</html>